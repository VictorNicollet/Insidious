{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}